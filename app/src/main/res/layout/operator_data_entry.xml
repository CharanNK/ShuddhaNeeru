    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/mainActivityPadding"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="8dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_view_marginleft"
                    android:layout_marginTop="@dimen/card_view_margintop"
                    android:layout_marginRight="@dimen/card_view_marginleft"
                    android:layout_marginBottom="@dimen/card_view_margintop"
                    android:orientation="vertical">


                    <TableRow android:layout_marginTop="5dp">

                        <TextView
                            style="@style/operatorTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:drawableLeft="@drawable/ic_operatorid"
                            android:text="Plant Id :" />

                        <TextView
                            android:id="@+id/operatorid_value"
                            style="@style/operatorTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="testing testing testing testing" />
                    </TableRow>
                    <TableRow android:layout_marginTop="5dp">

                        <TextView
                            style="@style/operatorTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:drawableLeft="@drawable/ic_person"
                            android:text="Village :" />

                        <TextView
                            android:id="@+id/operatorname_value"
                            style="@style/operatorTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="testing testing testing testing" />
                    </TableRow>


