<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/mainActivityPadding"
                app:cardElevation="8dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_view_margintop"
                    android:layout_marginLeft="@dimen/card_view_marginleft"
                    android:layout_marginRight="@dimen/card_view_marginleft"
                    android:layout_marginTop="@dimen/card_view_margintop"
                    android:orientation="vertical">


                    <TableRow android:layout_marginTop="5dp">

                        <TextView
                            style="@style/operatorTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:drawableLeft="@drawable/ic_plantid"
                            android:text="Plant Id :" />


                        <TextView
                            android:id="@+id/operatorid_value"
                            style="@style/operatorTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="testing testing testing testing" />

                    </TableRow>

                    <TableRow android:layout_marginTop="5dp">

                        <TextView
                            style="@style/operatorTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.75"
                            android:drawableLeft="@drawable/ic_location"
                            android:text="Village :" />

                        <TextView
                            android:id="@+id/operatorname_value"
                            style="@style/operatorTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="testing testing testing testing" />
                    </TableRow>
                </TableLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label_plantcapacity"
                            style="@style/operatorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/plant_capacity"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/label_plantcapacity_kannada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"

                            android:text="@string/plant_capacity_kannada"
                            android:textSize="9dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/plant_capacity_value"
                        style="@style/operatorEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_bg"
                        android:editable="false"
                        android:padding="5dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label_plantvoltage"
                            style="@style/operatorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/voltage"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/label_plantvoltage_kannada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="10dp"

                            android:text="@string/voltage_kannada"
                            android:textSize="9dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/voltage_button1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="&lt; 180V" />

                        <Button
                            android:id="@+id/voltage_button2"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="180 - 230V" />

                        <Button
                            android:id="@+id/voltage_button3"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="&gt; 230V" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/label_rwtanklevel"
                                    style="@style/operatorTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rwtl"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/label_rwtanklevel_kannada"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginStart="4dp"

                                    android:text="@string/rwtl_kannada"
                                    android:textSize="9dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">


                                <Button
                                    android:id="@+id/rwtank_level1"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="LOW(ಕಡಿಮೆ)" />

                                <Button
                                    android:id="@+id/rwtank_level2"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="HALF(ಅರ್ಧ)" />

                                <Button
                                    android:id="@+id/rwtank_level3"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="FULL(ತುಂಬಿದೆ)" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/label_rwflowrate"
                            style="@style/operatorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rwfl"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/label_rwflowrate_kannada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginStart="3dp"

                            android:text="@string/rwfl_kannada"
                            android:textSize="9dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/rwflowrate_spinner"
                                    style="@style/spinnerBackground"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:entries="@array/rw_flow_level_500"
                                    android:padding="5dp"></Spinner>

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/rwflowrateCamera"
                            android:layout_width="7dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:padding="5dp"
                            android:src="@drawable/ic_camera" />

                        <Switch
                            android:id="@+id/rwflowrate_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="N/A" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/label_twflowrate"
                            style="@style/operatorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/twfl"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/label_twflowrate_kannada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginStart="3dp"
                            android:text="@string/twfl_kannada"
                            android:textSize="9dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/twflowrate_spinner"
                                    style="@style/spinnerBackground"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:entries="@array/tw_flow_level_500"
                                    android:padding="5dp"></Spinner>

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/twflowrateCamera"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:padding="5dp"
                            android:src="@drawable/ic_camera" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/label_twtanklevel"
                            style="@style/operatorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/twtl"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/label_twtanklevel_kannada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/twtl_kannada"
                            android:textSize="10dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/twtanklevel1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="LOW(ಕಡಿಮೆ)" />

                        <Button
                            android:id="@+id/twtanklevel2"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="HALF(ಅರ್ಧ)" />

                        <Button
                            android:id="@+id/twtanklevel3"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="FULL(ತುಂಬಿದೆ)" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/label_volumedispensed"
                            style="@style/operatorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/volume_disposed"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/label_volumedispensed_kannada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginStart="3dp"
                            android:text="@string/volume_disposed_kannada"
                            android:textSize="8dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/volumedisposed_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_bg"
                                    android:hint="Please enter a value"
                                    android:inputType="number"
                                    android:padding="5dp"
                                    android:textColor="@color/colorBlack"></EditText>

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/volumedispensedCamera"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:padding="5dp"
                            android:src="@drawable/ic_camera" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/label_twtds"
                            style="@style/operatorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/twtds"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/label_twtd_kannada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            android:text="@string/twtds_kannada"
                            android:textSize="9dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/twtds_button1"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="&lt; 50" />

                                <Button
                                    android:id="@+id/twtds_button2"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="50 - 100" />

                                <Button
                                    android:id="@+id/twtds_button3"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="&gt; 100" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/twtdsCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:padding="5dp"
                            android:src="@drawable/ic_camera" />

                        <Switch
                            android:id="@+id/twtds_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="N/A" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label_electricitymeter"
                            style="@style/operatorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/electricity_meter"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/label_electricitymeter_kannada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginStart="4dp"
                            android:text="@string/electricity_meter_kannada"
                            android:textSize="9dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/electricity_meter_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_bg"
                                    android:hint="Please enter a value"
                                    android:inputType="number"
                                    android:padding="5dp"
                                    android:textColor="@color/colorBlack"></EditText>

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/electricitymeterCamera"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.15"
                            android:padding="5dp"
                            android:src="@drawable/ic_camera" />

                        <Switch
                            android:id="@+id/electricitymeter_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="N/A" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/operator_submit_button"
                        style="@style/AppTheme.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/submit" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>