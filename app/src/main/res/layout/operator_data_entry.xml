                </TableLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_plantcapacity"
                        style="@style/operatorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plant_capacity" />

                    <TextView
                        android:id="@+id/plant_capacity_value"
                        style="@style/operatorEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edittext_bg"
                        android:editable="false"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/label_plantvoltage"
                        style="@style/operatorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/voltage" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/voltage_button1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="&lt; 180V" />

                        <Button
                            android:id="@+id/voltage_button2"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="180 - 230V" />

                        <Button
                            android:id="@+id/voltage_button3"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="&gt; 230V" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label_rwtanklevel"
                                style="@style/operatorTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rwtl" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/rwtank_level1"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="LOW" />

                                <Button
                                    android:id="@+id/rwtank_level2"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="HALF" />

                                <Button
                                    android:id="@+id/rwtank_level3"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="FULL" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label_rwflowrate"
                                style="@style/operatorTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rwfl" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/rwflowrate_spinner"
                                    style="@style/spinnerBackground"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:entries="@array/rw_flow_level_500"
                                    android:padding="5dp"></Spinner>

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/rwflowrateCamera"
                            android:layout_width="7dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:paddingTop="20dp"
                            android:src="@drawable/ic_camera" />

                        <RadioGroup
                            android:id="@+id/failure_radiogroup"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="23dp">

                            <RadioButton
                                android:id="@+id/radio_notapplicable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NA" />
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label_twflowrate"
                                style="@style/operatorTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/twfl" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/twflowrate_spinner"
                                    style="@style/spinnerBackground"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:entries="@array/tw_flow_level_500"
                                    android:padding="5dp"></Spinner>

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/twflowrateCamera"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:paddingTop="20dp"
                            android:src="@drawable/ic_camera" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/label_twtanklevel"
                        style="@style/operatorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/twtl" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/twtanklevel1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="LOW" />

                        <Button
                            android:id="@+id/twtanklevel2"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="HALF" />

                        <Button
                            android:id="@+id/twtanklevel3"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/operator_button_height"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:text="FULL" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label_volumedispensed"
                                style="@style/operatorTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/volume_disposed" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/volumedisposed_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_bg"
                                    android:hint="Please enter a value"
                                    android:inputType="number"
                                    android:padding="5dp"
                                    android:textColor="@color/colorBlack"></EditText>

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/volumedispensedCamera"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:paddingTop="20dp"
                            android:src="@drawable/ic_camera" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label_twtds"
                                style="@style/operatorTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/twtds" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/twtds_button1"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="&lt; 50" />

                                <Button
                                    android:id="@+id/twtds_button2"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="50 - 100" />

                                <Button
                                    android:id="@+id/twtds_button3"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/operator_button_height"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bg"
                                    android:text="&gt; 100" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/twtdsCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:paddingTop="20dp"
                            android:src="@drawable/ic_camera" />

                        <RadioGroup
                            android:id="@+id/twtds_radiogroup"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="23dp">

                            <RadioButton
                                android:id="@+id/twtds_notapplicable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NA" />
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label_electricitymeter"
                                style="@style/operatorTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/electricity_meter" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/electricity_meter_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_bg"
                                    android:hint="Please enter a value"
                                    android:inputType="number"
                                    android:padding="5dp"
                                    android:textColor="@color/colorBlack"></EditText>

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/electricitymeterCamera"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.15"
                            android:paddingTop="20dp"
                            android:src="@drawable/ic_camera" />

                        <RadioGroup
                            android:id="@+id/electric_radiogroup"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="25dp">

                            <RadioButton
                                android:id="@+id/electric_notapplicable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NA" />
                        </RadioGroup>

                    </LinearLayout>

                    <Button
                        android:id="@+id/operator_submit_button"
                        style="@style/AppTheme.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="SUBMIT" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>