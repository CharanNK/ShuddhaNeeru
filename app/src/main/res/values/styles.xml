<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/buttonColor</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="otpField" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">#6C6B99</item>
    </style>

    <style name="operatorTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dasboardStatsValue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dasboardStatsTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="operatorEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="spinnerBackground">
        <item name="android:background">@drawable/gradient_spinner</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
