<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sanradiance.mobilewpp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_government"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_government"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CommissionerDashboard" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".VerifyOTPActivity" />
        <activity
            android:name=".OperatorDashboardActivity"
            android:label="@string/title_activity_operator_dashboard"
            android:theme="@style/AppTheme" />
    </application>

</manifest>